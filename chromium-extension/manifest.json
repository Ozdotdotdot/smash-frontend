{
  "manifest_version": 3,
  "name": "Smash Watch Link",
  "description": "Adds a “View on smash.watch” button on start.gg tournament event and bracket pages.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.start.gg/tournament/*/event/*/*",
        "https://*.start.gg/tournament/*/event/*/brackets/*",
        "https://*.start.gg/tournament/*/event/*/overview",
        "https://*.start.gg/tournament/*/event/*/details"
      ],
      "js": [
        "src/content.js"
      ],
      "css": [
        "src/content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
